-- base class for all aperiodic server policies

--  ??? Consider putting parms explicitly into this type,
--  and the providing a non-null Bind_Parms operation.

with Aperiodic_Server_Parameters; use Aperiodic_Server_Parameters;
package Threads.Aperiodic is

   type Object is new
     Threads.Scheduling_Policies.Object with null record;
   end record;
   
   type Object_Class_Ref is access all Object'Class;

   procedure Bind_Parms
     (P : in out Object;
      Parms : Aperiodic_Server_Parameters.Parameters) is abstract;

end Threads.Aperiodic;
@
